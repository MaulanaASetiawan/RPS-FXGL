<AnchorPane prefHeight="480.0" prefWidth="640.0" style="-fx-background-color: #373A40;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.rpsfxgl.LoginScreen">
    <children>
        <AnchorPane layoutX="110.0" layoutY="36.0" prefHeight="408.0" prefWidth="419.0" style="-fx-background-color: #686D76;">
            <children>
                <VBox layoutX="30.0" layoutY="96.0" prefHeight="167.0" prefWidth="358.0" spacing="10.0">
                    <children>
                        <Text fill="#fffafa" strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
                            <font>
                                <Font name="Rockwell Condensed" size="20.0" />
                            </font>
                        </Text>
                        <TextField fx:id="txtUsername" prefHeight="38.0" prefWidth="358.0" style="-fx-background-radius: 10;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
                            <font>
                                <Font name="Rockwell Condensed" size="20.0" />
                            </font>
                        </Text>
                        <PasswordField fx:id="txtPassword" prefHeight="38.0" prefWidth="358.0" style="-fx-background-radius: 10;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </PasswordField>
                    </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                </VBox>
                <Label alignment="TOP_LEFT" contentDisplay="CENTER" layoutX="145.0" layoutY="27.0" prefHeight="60.0" prefWidth="129.0" text="SIGN IN" textFill="WHITE">
                    <font>
                        <Font name="Rockwell Condensed" size="48.0" />
                    </font>
                </Label>
                <Button fx:id="btnLogin" layoutX="115.0" layoutY="288.0" mnemonicParsing="false" onAction="#Login" prefHeight="35.0" prefWidth="188.0" style="-fx-background-color: #F9B401; -fx-background-radius: 30;" text="SIGN IN" textFill="WHITE">
                    <font>
                        <Font name="Rockwell Condensed" size="24.0" />
                    </font>
                </Button>
                <Text fill="#fff8f8" layoutX="88.0" layoutY="384.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Don't you have an account yet?">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>
                <Text fx:id="lblSignup" fill="#f9b401" layoutX="288.0" layoutY="384.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Signup">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>
            </children>
            <effect>
                <InnerShadow />
            </effect>
        </AnchorPane>
    </children>
</AnchorPane>
